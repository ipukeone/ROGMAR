#######################################################################
# --- SOCKETPROXY --- CONTAINER BASICS
#######################################################################

SOCKETPROXY_IMAGE=lscr.io/linuxserver/socket-proxy                                                                                                              # Docker image to use

#######################################################################
# --- SOCKETPROXY --- ENVIRONMENT VARIABLES
#######################################################################

LOG_LEVEL=err                                                                                                                                                   # Set log level (debug, info, notice, warning, err, crit, alert, emerg)

###################################
# DOCKER API PERMISSIONS
###################################
AUTH=0                                                                                                                                                          # Access to /auth (authenticate against registries)
BUILD=0                                                                                                                                                         # Access to /build (build images via API)
COMMIT=0                                                                                                                                                        # Access to /commit (commit container state to image)
CONFIGS=0                                                                                                                                                       # Access to /configs (Swarm configs)
CONTAINERS=0                                                                                                                                                    # Access to /containers (list, inspect, start, stop, restart, etc.)
DISTRIBUTION=0                                                                                                                                                  # Access to /distribution (image distribution / registry info)
EVENTS=1                                                                                                                                                        # Access to /events (real-time Docker event stream)
EXEC=0                                                                                                                                                          # Access to /exec (attach or run commands inside containers)
IMAGES=0                                                                                                                                                        # Access to /images (list, inspect, pull, remove, etc.)
INFO=0                                                                                                                                                          # Access to /info (general Docker info like server state)
NETWORKS=0                                                                                                                                                      # Access to /networks (list, inspect, connect, etc.)
NODES=0                                                                                                                                                         # Access to /nodes (Swarm nodes)
PING=1                                                                                                                                                          # Access to /_ping (basic health check of Docker API)
PLUGINS=0                                                                                                                                                       # Access to /plugins (list, enable, disable plugins)
SECRETS=0                                                                                                                                                       # Access to /secrets (Swarm secrets)
SERVICES=0                                                                                                                                                      # Access to /services (Swarm mode services)
SESSION=0                                                                                                                                                       # Access to /session (Docker session state)
SWARM=0                                                                                                                                                         # Access to /swarm (Swarm cluster config and join/leave)
SYSTEM=0                                                                                                                                                        # Access to /system (system-wide Docker info and prune)
TASKS=0                                                                                                                                                         # Access to /tasks (Swarm mode task status and info)
VERSION=1                                                                                                                                                       # Access to /version (Docker Engine version info)
VOLUMES=0                                                                                                                                                       # Access to /volumes (list, inspect, create, remove, etc.)

###################################
# GLOBAL WRITE PERMISSIONS
###################################
POST=0                                                                                                                                                          # Allow POST/PUT/DELETE requests (set to 0 for read-only access)

###################################
# FINE-GRAINED WRITE OVERRIDES
###################################
ALLOW_START=0                                                                                                                                                   # Allow starting containers even if POST=0
ALLOW_STOP=0                                                                                                                                                    # Allow stopping containers even if POST=0
ALLOW_RESTARTS=0                                                                                                                                                # Allow restarting containers even if POST=0

###################################
# MISC
###################################
DISABLE_IPV6=1                                                                                                                                                  # Disable IPv6 support inside the container (if not needed)