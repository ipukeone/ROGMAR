######################################################################
# --- MARIADB_BACKUP --- BACKUP CONFIGURATION
######################################################################

MYSQL_BACKUP_RETENTION_DAYS=7                                                                                                                                 # Keep backups only for the last X days, older ones are deleted
MYSQL_BACKUP_COMPRESS_THREADS=4                                                                                                                               # Number of threads used for parallel compression during backup
MYSQL_BACKUP_PARALLEL=4                                                                                                                                       # Number of threads used for parallel processing of files in backup
MYSQL_BACKUP_MIN_FREE_MB=10240                                                                                                                                # Minimum free disk space in MB required to start a backup
MYSQL_RESTORE_DRY_RUN=false                                                                                                                                   # If true, simulate restore without applying changes (no copy-back)